doctype html
html
  head
    meta(charset='utf-8')
    title Recipes
    link(rel=stylesheet href='css/style.css')
  body
    .wrapper
      each recipe in recipes
        section.recipe
          img(src='#{recipe.img}' alt='food here')
          h2= recipe.name
          ul
            each ingredient in recipe.ingredients
                li= ingredient
          h3 Directions
            p= recipe.directions

